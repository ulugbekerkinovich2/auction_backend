generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:998359015a@@185.217.131.98:5432/auction_db"
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  password      String
  role          Role
  products      Product[]
  bids          Bid[]
  SalesAsSeller Sales[]   @relation("SalesAsSeller")
  SalesAsBuyer  Sales[]   @relation("SalesAsBuyer")
}

model Product {
  id         String            @id @default(uuid())
  userId     String
  user       User              @relation(fields: [userId], references: [id])
  name       String
  desc       String // Description of the product
  cost       Int
  image      String
  bids       Bid[]
  categories ProductCategory[]
  createdAt  DateTime          @default(now())
  isBuyed    Boolean           @default(false)
  isSelled   Boolean           @default(false)
  sales      Sales[] // Relation to Sales model
}

model Category {
  id       String            @id @default(uuid())
  name     String
  image    String
  products ProductCategory[]
}

model ProductCategory {
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([productId, categoryId])
}

model Bid {
  id               String   @id @default(uuid())
  productId        String
  product          Product  @relation(fields: [productId], references: [id])
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  bidAmount        Int
  createdAt        DateTime @default(now())
  amIboughtProduct Boolean  @default(false)
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

model Sales {
  id             String   @id @default(uuid())
  productId      String
  product        Product  @relation(fields: [productId], references: [id])
  selledUserId   String
  selledUser     User     @relation("SalesAsSeller", fields: [selledUserId], references: [id])
  boughtedUserId String
  boughtedUser   User     @relation("SalesAsBuyer", fields: [boughtedUserId], references: [id])
  createdAt      DateTime @default(now())
}
